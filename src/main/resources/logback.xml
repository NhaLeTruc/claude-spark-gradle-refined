<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with pattern formatting -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSX,UTC} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for pipeline execution logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/pipeline.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/pipeline-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSX,UTC} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Pipeline application logger -->
    <logger name="com.pipeline" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Suppress verbose Spark/Hadoop logs -->
    <logger name="org.apache.spark" level="WARN" />
    <logger name="org.apache.hadoop" level="WARN" />
    <logger name="org.spark_project" level="WARN" />
    <logger name="org.apache.parquet" level="WARN" />

    <!-- Kafka can be verbose -->
    <logger name="org.apache.kafka" level="WARN" />

    <!-- Delta Lake logs -->
    <logger name="io.delta" level="INFO" />

    <!-- Test logging -->
    <logger name="org.testcontainers" level="INFO" />
</configuration>
