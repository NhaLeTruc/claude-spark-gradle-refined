# Environment Variables for Data Pipeline Orchestration Application
# Copy this file to .env and update with your actual credentials
# NEVER commit .env to version control!

# PostgreSQL Configuration
POSTGRES_PASSWORD=pipelinepass

# MySQL Configuration
MYSQL_PASSWORD=pipelinepass
MYSQL_ROOT_PASSWORD=rootpass

# MinIO (S3-compatible) Configuration
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# HashiCorp Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-token

# Kafka Configuration (no auth for local development)
KAFKA_BOOTSTRAP_SERVERS=localhost:29092

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO

# Optional: AWS Configuration (for production S3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Optional: Production Database Configuration
# PROD_POSTGRES_HOST=your-postgres-host
# PROD_POSTGRES_PORT=5432
# PROD_POSTGRES_DB=your-database
# PROD_POSTGRES_USER=your-username
# PROD_POSTGRES_PASSWORD=your-password

# Optional: Production Kafka Configuration
# PROD_KAFKA_BOOTSTRAP_SERVERS=broker1:9092,broker2:9092
# PROD_KAFKA_SECURITY_PROTOCOL=SASL_SSL
# PROD_KAFKA_SASL_MECHANISM=PLAIN
# PROD_KAFKA_SASL_USERNAME=your-username
# PROD_KAFKA_SASL_PASSWORD=your-password
